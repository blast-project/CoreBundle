{
    "name": "blast-project/core-bundle",
    "type": "symfony-bundle",
    "description": "This is the core of Libre Informatique Symfony2 projects",
    "require": {
        "php": "^5.6 || ^7.0",
        "symfony/symfony": "3.2.*",
        "sonata-project/doctrine-orm-admin-bundle": "^3.1",
        "twig/twig": "^1.24",
        "stfalcon/tinymce-bundle": "2.1.*"
    },
    "require-dev": {
        "matthiasnoback/symfony-dependency-injection-test": "^0.1 || ^1.0",
        "sllh/php-cs-fixer-styleci-bridge": "^2.0",
        "symfony/phpunit-bridge": "^2.7 || ^3.0",
        "mikey179/vfsStream": "^1.6",
        "sensio/generator-bundle": "^3.1",
        "doctrine/doctrine-bundle": "^1.6"
    },
    "license": "GPL-3.0",
    "keywords": ["e-venement", "libio", "sonata", "symfony"],
    "homepage": "https://github.com/blast-project/CoreBundle",
    "authors": [
        {
            "name": "Baptiste SIMON",
            "email": "baptiste.simon@libre-informatique.fr"
        },
        {
            "name": "Marcos Bezerra de Menezes",
            "email": "marcos.bezerrademenezes@libre-informatique.fr"
        },
        {
            "name": "Romain SANCHEZ",
            "email": "romain.sanchez@libre-informatique.fr"
        },
        {
            "name": "Libre Informatique",
            "homepage": "http://www.libre-informatique.fr/"
        }
    ],
    "autoload": {
        "psr-4": {
            "Blast\\CoreBundle\\": "src/",
            "Blast\\CoreBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit-install": [
            "wget https://phar.phpunit.de/phpunit-5.7.phar --output-document=bin/phpunit",
            "chmod u+x bin/phpunit"
        ]
    }
}
